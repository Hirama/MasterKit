<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/logout"
        android:background="@drawable/ic_power_settings_new_black_24dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:onClick="logout"
        android:textColor="@color/color_navigation_list_background"
        android:enabled="false"
        android:fadeScrollbars="false"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/user_photo"
            android:layout_marginTop="20dp"
            android:contentDescription="" />

        <TextView
            android:text="Bobur Umurzakov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="6/11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/learning_level_text"
                android:layout_weight="0.77"
                android:textAlignment="center" />

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_level_text"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Обучение"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/learning_text"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp" />

            <TextView
                android:text="Уровень"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_text"
                android:layout_weight="1.06"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp" />
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progress="58"
            android:visibility="visible"
            android:max="100" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:background="@drawable/ic_settings_black_24dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:textColor="@color/color_navigation_list_background" />
</LinearLayout>
