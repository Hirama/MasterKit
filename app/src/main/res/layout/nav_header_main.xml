<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_weight="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/logout"
                android:background="@drawable/ic_power_settings_new_black_24dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:onClick="logout"
                android:textColor="@color/color_navigation_list_background"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginRight="20dp" />

            <!--<ImageView-->
                <!--app:srcCompat="@mipmap/ic_launcher"-->
                <!--android:scaleType="center"-->
                <!--android:id="@+id/user_photo"-->
                <!--android:layout_weight="0.90"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp" />-->

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_photo"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#8BC34A"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings"
                android:background="@drawable/ic_settings_black_24dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:textColor="@color/color_navigation_list_background"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <TextView
            android:text="Bobur Umurzakov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="6/11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/learning_level_text"
                android:layout_weight="0.98"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_level_text"
                android:layout_weight="1.07"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:text="Обучение"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/learning_text"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp" />

            <TextView
                android:text="Уровень"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_text"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_height="10dp"
            android:id="@+id/progressBar"
            android:progress="58"
            android:visibility="visible"
            android:max="100"
            android:layout_marginTop="6dp"
            android:progressDrawable="@drawable/rounded_progress"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

</LinearLayout>
